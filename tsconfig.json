{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "target": "ESNext",
    "paths": {
      "@yao/*": [
        "./scripts/__types/*"
      ],
      "@lib/*": [
        "./scripts/lib/*"
      ],
      "@scripts/*": [
        "./scripts/*"
      ]
    },
    "lib": [
      "ESNEXT",
      "DOM"
    ],
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./scripts/**/*",
    "./services/**/*",
    "./studio/**/*"
  ]
}