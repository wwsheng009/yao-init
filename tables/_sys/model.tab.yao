{
    "name": "模型管理",
    "action": {
        "bind": {
            "form": ""
        },
        "search": {
            "process": "scripts._sys.model.ModelSearch",
        }
    },
    "layout": {
        "primary": "id",
        "header": {
            "preset": {}
        },
        "filter": {
            "columns": [
                {
                    "name": "模型ID",
                    "width": 4,
                },
                {
                    "name": "名称",
                    "width": 4,
                },
            ],
            "actions": [
                {
                    "action": [
                        {
                            "name": "reloadMenu",
                            "type": "Common.reloadMenu"
                        },
                        {
                            "name": "message",
                            "payload": {
                                "type": "success",
                                "content": "加载成功"
                            },
                            "type": "Common.showMessage" //类型为service，sys对应services/sys.js文件
                        }
                    ],
                    "icon": "icon-menu",
                    "showWhenView": true,
                    "title": "重新加载系统菜单"
                },
            ]
        },
        "table": {
            "columns": [
                {
                    "name": "模型ID",
                    "width": 20,
                },
                {
                    "name": "名称",
                    "width": 150,
                },
                {
                    "name": "表格是否存在",
                    "width": 150,
                },
                {
                    "name": "表单是否存在",
                    "width": 150,
                },
                {
                    "name": "表格访问",
                    "width": 150,
                },
                {
                    "name": "表单访问",
                    "width": 150,
                }
            ],
            "operation": {
                "fold": false,
                "actions": [
                    {
                        "action": [
                            {
                                "name": "createTable",
                                "payload": {
                                    "args": [
                                        "{{id}}"
                                    ], //使用{{}}的语法传入参数
                                    "method": "createTable"
                                },
                                "type": "Service.sys" //类型为service，sys对应services/sys.js文件
                            },
                            {
                                "name": "refetch",
                                "type": "Common.refetch"
                            },
                            {
                                "name": "message",
                                "payload": {
                                    "type": "[[$createTable.type]]",
                                    "content": "[[$createTable.message]]"
                                },
                                "type": "Common.showMessage" //类型为service，sys对应services/sys.js文件
                            }
                        ],
                        "icon": "icon-plus",
                        "showWhenView": true,
                        "title": "创建表格配置"
                    },
                    {
                        "action": [
                            {
                                "name": "createForm",
                                "payload": {
                                    "args": [
                                        "{{id}}"
                                    ], //使用{{}}的语法传入参数
                                    "method": "createForm"
                                },
                                "type": "Service.sys" //类型为service，sys对应services/sys.js文件
                            },
                            {
                                "name": "refetch",
                                "type": "Common.refetch"
                            },
                            {
                                "name": "message",
                                "payload": {
                                    "type": "[[$createForm.type]]",
                                    "content": "[[$createForm.message]]"
                                },
                                "type": "Common.showMessage" //类型为service，sys对应services/sys.js文件
                            }
                        ],
                        "icon": "icon-file-plus",
                        "showWhenView": true,
                        "title": "创建表单配置"
                    },
                    {
                        "action": [
                            {
                                "name": "updateMenu",
                                "payload": {
                                    "args": [
                                        "{{id}}"
                                    ],
                                    "method": "updateMenu"
                                },
                                "type": "Service.sys" //类型为service，sys对应services/sys.js文件
                            },
                            {
                                "name": "message",
                                "payload": {
                                    "type": "[[$updateMenu.type]]",
                                    "content": "[[$updateMenu.message]]"
                                },
                                "type": "Common.showMessage" //类型为service，sys对应services/sys.js文件
                            }
                        ],
                        "disabled": {
                            "bind": "{{table_exist}}",
                            "value": "false"
                        },
                        "icon": "icon-menu",
                        "showWhenView": true,
                        "title": "更新菜单配置"
                    },
                    {
                        "action": [
                            {
                                "name": "HistoryPush",
                                "payload": {
                                    "pathname": "/x/Table/{{id}}"
                                },
                                "type": "Common.historyPush" //类型为service，sys对应services/sys.js文件
                            }
                        ],
                        "disabled": {
                            "bind": "{{table_exist}}",
                            "value": "false"
                        },
                        "icon": "icon-link",
                        "showWhenView": true,
                        "title": "查看表格"
                    }
                ]
            }
        },
    },
    "fields": {
        "filter": {
            "模型ID": {
                "bind": "where.id.match",
                "edit": {
                    "type": "Input",
                    "compute": "Trim",
                    "props": {
                        "placeholder": "请输入模型ID搜索"
                    }
                }
            },
            "名称": {
                "bind": "where.name.match",
                "edit": {
                    "type": "Input",
                    "compute": "Trim",
                    "props": {
                        "placeholder": "请输入名称搜索"
                    }
                }
            }
        },
        "table": {
            "模型ID": {
                "bind": "id",
                "view": {
                    "type": "Text",
                }
            },
            "名称": {
                "bind": "name",
                "view": {
                    "type": "Text",
                }
            },
            "表格是否存在": {
                "bind": "table_exist",
                "view": {
                    "type": "Switch",
                    "props": {
                        "checkedValue": true,
                        "unCheckedValue": false,
                        "disabled": true
                    }
                }
            },
            "表单是否存在": {
                "bind": "form_exist",
                "view": {
                    "type": "Switch",
                    "props": {
                        "checkedValue": true,
                        "unCheckedValue": false,
                        "disabled": true
                    }
                }
            },
            "表格访问": {
                "bind": "table_url",
                "view": {
                    "type": "Text",
                    "props": {
                        "href": "{{table_url}}"
                    }
                }
            },
            "表单访问": {
                "bind": "form_url",
                "view": {
                    "type": "Text",
                    "props": {
                        "href": "{{form_url}}"
                    }
                }
            }
        }
    }
}